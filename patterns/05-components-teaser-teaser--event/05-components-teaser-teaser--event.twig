{% set classes = [
  'teaser--event',
  modifier_classes ? modifier_classes,
]|join(' ')|trim %}

{% set metadata %}
 {% include '@components/field/field.twig' with {
   'label_display': 'inline',
   'label_element': 'div',
   'label': 'Event Date'|t,
   'field_items': [
     {
       'content': date,
     },
   ],
 } %}
{% endset %}

{% include '@components/teaser/teaser.twig' with {
  'modifier_classes': classes,
  'url': url,
  'title': title,
  'subtitle': null,
  'metadata': metadata,
  'summary': summary,
} %}
