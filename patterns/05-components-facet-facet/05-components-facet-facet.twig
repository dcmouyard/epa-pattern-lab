{% set classes = [
  'facet',
  modifier_classes ? modifier_classes,
]|join(' ')|trim %}

{% spaceless %}
  <a class="{{ classes }}" href="{{ url }}">
    {%- include '@components/icon/icon.twig' with {
      'modifier_classes': 'facet__icon facet__icon--empty',
      'is_hidden': true,
      'icon_name': 'square',
    } -%}
    {%- include '@components/icon/icon.twig' with {
      'modifier_classes': 'facet__icon facet__icon--selected',
      'is_hidden': false,
      'label': 'Selected:'|t,
      'icon_name': 'check-square',
    } -%}
    <span class="facet__content">
      {{- title -}}
      {%- if show_count %}
        <span class="facet__count">
          {{- count -}}
          <span class="u-visually-hidden"> items</span>
        </span>
      {%- endif -%}
    </span>
  </a>
{% endspaceless %}
