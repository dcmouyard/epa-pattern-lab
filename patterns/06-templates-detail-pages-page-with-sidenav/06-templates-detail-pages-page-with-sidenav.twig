{% set content %}
  {% embed '@layouts/sidebar/sidebar.twig' with {
    'has_sidebar': has_sidenav,
    'modifier_classes': 'l-sidebar--reversed',
  } %}
    {% block main_content %}
      {% embed '@components/article/article.twig' with {
        'title': title,
        'intro': intro,
        'content': body,
        'sidebar': sidebar,
      } %}

        {% block messages %}
          {{ messages }}
        {% endblock %}

        {% block local_tasks %}
          {{ tasks }}
        {% endblock %}
      {% endembed %}
    {% endblock %}

    {% block sidebar %}
      {{ sidenav }}
    {% endblock %}
  {% endembed %}

{% endset %}

{% embed '@layouts/page/page.twig' with {
  'has_header': has_header,
  'has_footer': has_footer,
} %}
  {% block info %}
    {{ header_info }}
  {% endblock %}

  {% block contact %}
    {{ contact_link }}
  {% endblock %}

  {% block content %}
    {{ content }}
  {% endblock %}

  {% block footer %}
    {{ footer }}
  {% endblock %}
{% endembed %}
