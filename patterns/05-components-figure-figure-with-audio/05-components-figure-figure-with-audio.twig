{% set audio_caption %}
  {% if transcript %}
    {% include '@components/field/field--simple/field--simple.twig' with {
      'is_demo': false,
      'modifier_classes': 'field--tight',
      'element': 'div',
      'label': 'Transcript',
      'label_hidden': false,
      'label_element': 'strong',
      'field_items': [
        {
          "content": transcript,
        }
      ],
    } %}
  {% endif %}

  {% if running_time %}
    {% include '@components/field/field--simple/field--simple.twig' with {
      'is_demo': false,
      'modifier_classes': 'field--tight',
      'element': 'div',
      'label': 'Running Time',
      'label_hidden': false,
      'label_element': 'strong',
      'field_items': [
        {
          "content": running_time,
        }
      ],
    } %}
  {% endif %}
{% endset %}

{% include '@components/figure/figure.twig' with {
  'modifier_classes': modifier_classes,
  'media': media,
  'caption': audio_caption,
} %}
